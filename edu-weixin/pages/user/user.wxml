<view class="container data-v-b5a2bcea">
	<view class="user-title data-v-b5a2bcea">
		<view class="page-title data-v-b5a2bcea"></view>
		<view class="user-title-center data-v-b5a2bcea">
			<view class="user-photo data-v-b5a2bcea">
				<image src="{{userinfo.avatar?userinfo.avatar:'../../static/user-photo.png'}}" mode="aspectFit" class="data-v-b5a2bcea"></image>
				<view class="user-info data-v-b5a2bcea"><text class="data-v-b5a2bcea">请登录</text></view>
			</view>
		</view>
		<view class="user-title-bottom data-v-b5a2bcea">
			<view class="user-balance data-v-b5a2bcea">
				<view data-event-opts="{{[['tap',[['openChongzhi',['$event']]]]]}}" class="user-balance-item data-v-b5a2bcea" bindtap="__e"><text class="data-v-b5a2bcea">{{userinfo.money?userinfo.money:0}}</text><text class="data-v-b5a2bcea">余额（元）</text></view>
				<view data-event-opts="{{[['tap',[['navigate',['credits-exchange']]]]]}}" class="user-balance-item data-v-b5a2bcea" bindtap="__e"><text class="data-v-b5a2bcea">{{userinfo.credit?userinfo.credit:0}}</text><text class="data-v-b5a2bcea">积分</text></view>
				<view data-event-opts="{{[['tap',[['navigate',['learn-time']]]]]}}" class="user-balance-item data-v-b5a2bcea" style="overflow:hidden;" bindtap="__e"><text style="font-size:35rpx;" class="data-v-b5a2bcea">{{todayTotal}}</text><text class="data-v-b5a2bcea">学习时长</text></view>
				<view data-event-opts="{{[['tap',[['navigate',['message']]]]]}}" class="user-balance-item data-v-b5a2bcea" bindtap="__e"><text
					 class="data-v-b5a2bcea">0</text><text class="data-v-b5a2bcea">消息</text></view>
			</view>
		</view>
		<block wx:if="{{isChongzhi===true}}">
			<view class="chongzhi data-v-b5a2bcea">
				<view class="chongzhi-box data-v-b5a2bcea">
					<view class="chongzhi-box-top data-v-b5a2bcea"><text class="data-v-b5a2bcea">{{"当前余额："+(userinfo.money?userinfo.money:0)}}</text>
						<view class="money-input data-v-b5a2bcea"><text class="data-v-b5a2bcea">充值金额：</text><input type="digit" placeholder="请输入充值金额" data-event-opts="{{[['input',[['changeCzmoney',['$event']]]]]}}" bindinput="__e" class="data-v-b5a2bcea" /></view>
					</view>
					<view class="chongzhi-box-bottom data-v-b5a2bcea"><text data-event-opts="{{[['tap',[['closeChongzhi',[false]]]]]}}"
						 bindtap="__e" class="data-v-b5a2bcea">关闭</text><text data-event-opts="{{[['tap',[['czbtn',['$event']]]]]}}"
						 bindtap="__e" class="data-v-b5a2bcea">充值</text></view>
				</view>
			</view>
		</block>
		<view class="user-icon-list data-v-b5a2bcea">
			<view data-event-opts="{{[['tap',[['goSignIn',['$event']]]]]}}" class="user-icon-list-item data-v-b5a2bcea" bindtap="__e">
				<image src="../../static/user-qiandao.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">每日签到</text>
			</view>
			<view data-event-opts="{{[['tap',[['navigate',['credits-exchange']]]]]}}" class="user-icon-list-item data-v-b5a2bcea" bindtap="__e">
				<image src="../../static/user-jifen.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">积分商城</text>
			</view>
			<view data-event-opts="{{[['tap',[['navigate',['wo-subscribe']]]]]}}" class="user-icon-list-item data-v-b5a2bcea" bindtap="__e">
				<image src="../../static/dingyue.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">我的收藏</text>
			</view>
			<view data-event-opts="{{[['tap',[['navigate',['vip']]]]]}}" class="user-icon-list-item data-v-b5a2bcea" bindtap="__e">
				<image src="../../static/user-vip.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">升级VIP</text>
			</view>
		</view>
	</view>
	<block wx:if="{{isCut==true}}">
		<view class="user-cut data-v-b5a2bcea">
			<view data-event-opts="{{[['tap',[['navigate',['vip']]]]]}}" class="user-cut-vip data-v-b5a2bcea" bindtap="__e">
				<image src="../../static/user-vip-cut.png" mode="aspectFit" class="data-v-b5a2bcea"></image>
			</view>
			<view class="user-cut-box1 data-v-b5a2bcea">
				<view class="user-cut-box1-top data-v-b5a2bcea"><text class="data-v-b5a2bcea">更多服务</text></view>
				<view class="user-cut-box1-bottom data-v-b5a2bcea">
					<view class="cut-list data-v-b5a2bcea">
						<view data-event-opts="{{[['tap',[['navigate',['wo-course']]]]]}}" class="cut-list-item data-v-b5a2bcea" bindtap="__e">
							<image src="../../static/orders1.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">我的订单</text>
						</view>
						<view data-event-opts="{{[['tap',[['navigate',['recruit']]]]]}}" class="cut-list-item data-v-b5a2bcea" bindtap="__e">
							<image src="../../static/jszm2.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">讲师招募</text>
						</view>
						<view data-event-opts="{{[['tap',[['make_phone',['$event']]]]]}}" class="cut-list-item data-v-b5a2bcea" bindtap="__e">
							<image src="../../static/telphone.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">联系我们</text>
						</view>
						<view data-event-opts="{{[['tap',[['logout',['$event']]]]]}}" class="cut-list-item data-v-b5a2bcea" bindtap="__e">
							<image src="../../static/zhuxiao.png" mode="aspectFit" class="data-v-b5a2bcea"></image><text class="data-v-b5a2bcea">退出登录</text>
						</view>
					</view>
				</view>
			</view>
		</view>
	</block>
	<view data-event-opts="{{[['tap',[['copyright',['$event']]]]]}}" class="logo data-v-b5a2bcea" bindtap="__e">
		<image src="../../static/jishuzhichi.png" mode="aspectFit" class="data-v-b5a2bcea"></image>
	</view>
</view>